---
interface Props {
  platform: string;
  url: string;
}

const { platform, url } = Astro.props;
---

<a 
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-block px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 backdrop-blur-sm transition-all duration-300 mr-3 mb-3"
  data-aos="fade-up">
  {platform}
</a>