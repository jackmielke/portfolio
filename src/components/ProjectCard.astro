---
interface Props {
  title: string;
  url: string;
  description?: string;
}

const { title, url, description } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" 
  class="block p-4 rounded-lg bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-all duration-300"
  data-aos="fade-up">
  <h3 class="text-xl font-medium mb-2">{title}</h3>
  {description && <p class="text-gray-300">{description}</p>}
</a>